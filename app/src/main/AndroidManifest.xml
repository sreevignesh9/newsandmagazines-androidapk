<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newsandmagazines">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_news_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_news_main_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NewsAndMagazines">
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/SettingsTheme"
            android:label="Settings"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.newsandmagazines.MainActivity" />
        </activity>
    </application>

</manifest>